# Start apps
bindsym $mod+Return exec $term -e fish
bindsym $mod+d exec dmenu_run -i -l 5 -p '>>' -nb '$night' -nf '$puce' -sb '$darkslategrey'
bindsym $mod+Shift+c exec chromium --incognito
bindsym $mod+c exec firefox --private-window $homepage
bindsym $mod+m exec $term -title cmus -e cmus
bindsym $mod+t exec thunar
bindsym $mod+y exec $term -e ranger

